import java.io.*;
import java.util.Scanner;
public class Lab12_Zad2{
    public static void main(String[] args) throws FileNotFoundException {
        Scanner sc = new Scanner(System.in);
        Obywatel obywatel1 = new Obywatel();
        Obywatel obywatel2 = new Obywatel("Kacper","Kobylecki","0131222333",2100.2);
        obywatel1.podajDane("Artur","Grodel","0111122333",2000.0);

        try(ObjectOutputStream out = new ObjectOutputStream(new BufferedOutputStream(new FileOutputStream("obywatel1ser.dat"))))
        {
        out.writeObject(obywatel1);
        out.writeObject(obywatel2);
            System.out.println("Obiekt zostal zserializowany i zapisany.");
        }catch (IOException e){
            e.printStackTrace();
        }

        try(ObjectInputStream in = new ObjectInputStream(new BufferedInputStream(new FileInputStream("obywatel1ser.dat"))))
        {
            obywatel1 = (Obywatel) in.readObject();
            System.out.println("Obiekt zostal zdeserializowany.");
        }catch(IOException | ClassNotFoundException e){
            e.printStackTrace();
            return;
        }


    }
}
class Obywatel implements Serializable{
    String imie;
    String nazwisko;
    String pesel;
    double dochod;
    Obywatel(){}
    Obywatel(String imie,String nazwisko,String pesel,double dochod){
        this.imie = imie;
        this.nazwisko = nazwisko;
        this.pesel = pesel;
        this.dochod = dochod;
    }
    void podajDane(String imie,String nazwisko,String pesel,double dochod){
        this.imie = imie;
        this.nazwisko = nazwisko;
        this.pesel = pesel;
        this.dochod = dochod;
    }
    void drukujDane(){
        System.out.println("Imie: "+this.imie);
        System.out.println("Imie: "+this.nazwisko);
        System.out.println("Imie: "+this.imie);
        System.out.println("Imie: "+this.imie);
    }
}
